<?xml version="1.0" encoding="UTF-8"?>
<views:BaseContentPage  xmlns:views="clr-namespace:MapNotepad.Views"
                        xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="MapNotepad.Views.SettingsPage"
                        Title="{Binding Resources[Settings]}">


    <StackLayout Orientation="Horizontal"
                 VerticalOptions="Start">

        <Label Style="{StaticResource MediumLabelStyle}"
               Text="{Binding Resources[DarkTheme]}"
               VerticalOptions="Center"/>

        <CheckBox IsChecked="{Binding Path=DarkThemeIsChecked, Mode=TwoWay}"/>

    </StackLayout>

</views:BaseContentPage>
