<?xml version="1.0" encoding="UTF-8"?>
<views:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:views="clr-namespace:MapNotepad.Views"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MapNotepad.Views.PinsPage"
             Title="Pins"
             x:Name="pinsPage">

    <StackLayout>
        <SearchBar HorizontalOptions="CenterAndExpand"
                   SearchCommand="{Binding SearchCommand}"
                   SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                   x:Name="searchBar"/>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--<Label Text="Empty List"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>-->

            <ListView Grid.Row="0"
                  ItemsSource="{Binding CustomPinCollection}" 
                  RowHeight="100" 
                  Margin="10"
                  HasUnevenRows="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="100">
                            <ViewCell.ContextActions>
                                <!--<MenuItem Text="{Binding Path=BindingContext.Resources[Edit], 
                                                     Source={x:Reference profilesPage}}" 
                                      Command="{Binding Path=BindingContext.EditCommand, 
                                                        Source={x:Reference profilesPage}}" 
                                      CommandParameter="{Binding .}"/>-->
                                <MenuItem Text="Delete"
                                      Command="{Binding Path=BindingContext.DeleteCommand, 
                                                        Source={x:Reference pinsPage}}" 
                                      CommandParameter="{Binding .}"/>
                            </ViewCell.ContextActions>
                            <StackLayout VerticalOptions="Center"
                                     Margin="10,0,0,0">
                                <Label Text="{Binding Label}"/>
                                <Label Text="{Binding Latitude}"/>
                                <Label Text="{Binding Longitude}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Grid.Row="0" 
                Text="+"
                BorderRadius="35"
                VerticalOptions="End"
                HorizontalOptions="End"
                HeightRequest="70"
                WidthRequest="70"
                Margin="0,0,20,20"
                BackgroundColor="SkyBlue"
                Command="{Binding ToAddPinPageCommand}"/>
        </Grid>
    </StackLayout>
</views:BaseContentPage>
